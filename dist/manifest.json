{
  "manifest_version": 3,
  "name": "MyGO!!!!! Image",
  "version": "1.0.0",
  "description": "React + Vite로 만든 Chrome 확장",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "icons/icon48.png"
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content.ts-loader-Dtq7UkyF.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "resources": [
        "assets/browser-polyfill-DMmbowld.js",
        "assets/content.ts-DFLt5twY.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
